index f98d1d6..7f534fe 100644
--- a/arch/arm/boot/dts/am33xx.dtsi
+++ b/arch/arm/boot/dts/am33xx.dtsi
@@ -181,6 +181,8 @@
 			port0_mode = <3>;
 			port1_mode = <1>;
