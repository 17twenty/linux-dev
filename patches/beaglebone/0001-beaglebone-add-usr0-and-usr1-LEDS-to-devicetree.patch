From 668c443b4e133d25c1f72308a85d9310822fdc80 Mon Sep 17 00:00:00 2001
From: Koen Kooi <koen@dominion.thruhere.net>
Date: Wed, 25 Jul 2012 09:32:10 +0200
Subject: [PATCH 1/3] beaglebone: add usr0 and usr1 LEDS to devicetree

Signed-off-by: Koen Kooi <koen@dominion.thruhere.net>
---
 arch/arm/boot/dts/am335x-bone.dts |   14 ++++++++++++++
 1 file changed, 14 insertions(+)

diff --git a/arch/arm/boot/dts/am335x-bone.dts b/arch/arm/boot/dts/am335x-bone.dts
index 323e9e9..41f078c 100644
--- a/arch/arm/boot/dts/am335x-bone.dts
+++ b/arch/arm/boot/dts/am335x-bone.dts
@@ -22,6 +22,7 @@
 		uart1: serial@44E09000 {
 			status = "okay";
 		};
+
 		i2c1: i2c@44E0B000 {
 			status = "okay";
 			clock-frequency = <400000>;
@@ -30,7 +31,20 @@
 				reg = <0x24>;
 			};
 		};
+	};
+
+	leds {
+		compatible = "gpio-leds";
+		heartbeat {
+			label = "beaglebone::usr0";
+			gpios = <&gpio2 21 0>;
+			linux,default-trigger = "heartbeat";
+		};
 
+		mmc {
+			label = "beaglebone:usr1";
+			gpios = <&gpio2 22 0>;
+			linux,default-trigger = "mmc0";
 		};
 	};
 };
